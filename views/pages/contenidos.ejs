<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Ingresos</title>
	<%- include('../partials/head'); %>
    <link rel="stylesheet" href="stylesheets/list.css">
    <style>
        td {
            padding: 2px;
            border: solid 1px #eee;
        }
        .list {
            font-family: sans-serif;
        }
        .sort {
            padding: 2px 5px;
        }
        .listado  {
                padding: 10px 50px 50px;
        }
        table.contenido tbody tr:nth-child(odd) {
            background: #73a9f9;
        }
        table.contenido tbody tr:nth-child(even) {
            background: #d4d7e1;
        }
        #table-body-contents {
            padding-top: 100px;
            padding-bottom: 40px;
        }
        th button {
            font-size: 13px;
        }
        tr.row-data td {
            font-size: 16px;
            padding-left: 5px;
            padding-right: 5px;
        }

        #contenidos_menu {
			background-color: bisque;
		}
    </style>
</head>
<body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    
    <div id="table-body-contents">
        <h4>TAPACANTOS</h4>
        <div id="tapacantos" class="listado">
            Busqueda: <input class="search" placeholder="Search" />
            <table class="contenido">
                <thead>
                    <tr class="row100 head">
                        <th class=""><button class="sort" data-sort="Provedor">Provedor</button></th>
                        <th class=""><button class="sort" data-sort="Medidas">Medidas</button></th>
                        <th class=""><button class="sort" data-sort="Color">Color</button></th>
                        <th class=""><button class="sort" data-sort="Marca">Marca</button></th>
                        <th class=""><button class="sort" data-sort="PrecioCompra">Precio de Compra</button></th>
                        <th class=""><button class="sort" data-sort="PrecioVenta">Precio de Venta</button></th>
                        <th class=""><button class="sort" data-sort="MetrosXRollo">Metros x Rollo</button></th>
                        <th class=""><button class="sort" data-sort="RollosXCaja">Rollos x Caja</button></th>
                        <th class=""><button class="sort" data-sort="PrecioCompraXMetros">Precio de Compra x Metros</button></th>
                        <th class=""><button class="sort" data-sort="PrecioVentaXMetros">Precio de Venta x Metros</button></th>
                    </tr>
                </thead>
                <tbody class="list">
                    <%  for (let index = tapacantos.length-1; index >= 0; index--) { %>
                        <tr class="row-data">
                            <td class="Provedor"><%= tapacantos[index].provedor %></td>
                            <td class="Medidas"><%= tapacantos[index].medidas %></td>
                            <td class="Color"><%= tapacantos[index].color%></td>
                            <td class="Marca"><%= tapacantos[index].marca %></td>
                            <td class="PrecioCompra"><%= tapacantos[index].precio_compra %> Bs(rollo) </td>
                            <td class="PrecioVenta"><%= tapacantos[index].precio_venta %> Bs(rollo)</td>
                            <td class="MetrosXRollo"><%= tapacantos[index].metrosxrollo %></td>
                            <td class="RollosXCaja"><%= tapacantos[index].rollosxcaja %></td>
                            <td class="PrecioCompraXMetros"><%= tapacantos[index].precio_compra_metros %> Bs</td>
                            <td class="PrecioVentaXMetros"><%= tapacantos[index].precio_venta_metros %> Bs</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

