                    </tr>
                </thead>
                <tbody class="list">
                    <%  for (let index = tapacantos.length-1; index >= 0; index--) { 
                            let tapacanto = tapacantos[index];
                        %>
                        <tr class="row-data">
                            <td class="Provedor" id="<%=tapacantos[index].provedor_id %>"><%= tapacanto.provedor %></td>
                            <td class="Medidas" id="<%=tapacantos[index].medidas_id %>"><%= tapacanto.medidas %></td>
