		var catPegamento = <%- JSON.stringify(catalogoPegamento); %>;
		var catFondo = <%- JSON.stringify(catalogoFondo); %>;

		let hashProducto = {};

		function fillList() {
			var items = ["Melamina","Tapacantos","Pegamento","Fondo"];
			items.forEach((value)=>{
				objCatalog = window["cat" + value];
				objCatalog.forEach(element => {
					var hash = CryptoJS.MD5(value + element.color + element.medidas + element.marca);
					if (hashProducto[hash]) {
						hashProducto[hash].existencia += element.existencia; 
					} else {
						hashProducto[hash] = element;
					}
				});
			});
		}
		fillList();

		function fetchProducto(key) {
			let indexHash = CryptoJS.MD5(key.item + key.color + key.medida + key.marca);
			return hashProducto[indexHash];
		}

