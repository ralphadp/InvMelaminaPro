												<% for(let index = 0; index < cliente.length; index++) {
													if (cliente[index].tipo == "externo") { %>
                                                    <option value="<%= index %>"><%= cliente[index].nombre %></option>
                                                <% } } %>
											</select>
											<span class="select-btn">
												<i class="zmdi zmdi-chevron-down"></i>
											</span>
										</div>
									</div>
									<div class="form-row">
										<div class="form-holder form-holder-2">
											<label for="item_re" class="special-label-1">Item </label>
											<select name="item_re" id="item_re" class="form-control" onchange="selectItem()">
												<option value="" selected="">(Elija el item)</option>
                                                <% for(let index = 0; index < item.length; index++) {%>
                                                    <option value="<%= item[index].nombre %>"><%= item[index].nombre %></option>
                                                <% } %>
											</select>
											<span class="select-btn">
												<i class="zmdi zmdi-chevron-down"></i>
											</span>
										</div>
										<div class="form-holder form-holder-2" id="divmedida_re">
											<label for="medida_re" class="special-label-1">Medida</label>
											<select name="medida_re" id="medida_re" class="form-control">
												<option value="" selected="">(Elija las medidas)</option>
                                                <% for(let index = 0; index < medida.length; index++) {%>
                                                    <option value="<%= medida[index].nombre %>"><%= medida[index].nombre %></option>
                                                <% } %>
											</select>
											<span class="select-btn">
												<i class="zmdi zmdi-chevron-down"></i>
											</span>
										</div>
										<div class="form-holder form-holder-2" id="divcolor_re">
											<label for="color_re" class="special-label-1">Color </label>
											<select name="color_re" id="color_re" class="form-control">
												<option value="" selected="">(Escoja el color)</option>
                                                <% for(let index = 0; index < color.length; index++) {%>
                                                    <option style="background: <%= color[index].codigo %>;" 
                                                        value="<%= color[index].nombre %>">
                                                        <%= color[index].nombre %>
                                                    </option>
                                                <% } %>
											</select>
											<span class="select-btn">
												<i class="zmdi zmdi-chevron-down"></i>
											</span>
										</div>
										<div class="form-holder form-holder-2" id="divmarca_re">
											<label for="marca_re" class="special-label-1">Marca </label>
											<select name="marca_re" id="marca_re" class="form-control">
												<option value="" selected="">(Elija la marca)</option>
                                                <% for(let index = 0; index < marca.length; index++) {%>
                                                    <option value="<%= marca[index].nombre %>"><%= marca[index].nombre %></option>
                                                <% } %>
											</select>
											<span class="select-btn">
												<i class="zmdi zmdi-chevron-down"></i>
											</span>
										</div>
									</div>
									<div class="form-row">
										<div class="form-holder form-holder-2">
											<label for="cantidad_re" class="special-label-1">Cantidad</label>
											<input type="number" id="cantidad_re" name="cantidad_re" min="1" max="40" class="form-control" value="1">
											<span class="select-btn">
												<i class="zmdi zmdi-chevron-down"></i>
											</span>
										</div>
										<div class="form-holder form-holder-2">
                                            <label for="unidad_re" class="special-label-1">Unidad</label>
                                            <select name="unidad_re" id="unidad_re" class="form-control">
                                                <option value="" selected="">(Elija la unidad)</option>
                                            </select>
                                            <span class="select-btn">
                                                <i class="zmdi zmdi-chevron-down"></i>
                                            </span>
                                        </div>
                                        <div class="form-holder form-holder-2">
                                            <label for="precio_re" class="special-label-1">Precio(Bs)<a class="precio" onclick="obtenerPrecioStandard()">Cargar Precio Standard</a></label>
                                            <input name="precio_re" id="precio_re" class="form-control" value="0.0">
                                            <span class="select-btn"><span id="precio-mensaje_re"></span></span>
                                        </div>
									</div>
									<div class="form-row form-row-date">
										<div class="form-holder form-holder-2">
											<label for="date" class="special-label-1">Fecha de pedido:
												<input style="color: #55e8d5" type="text" class="form-control" id="timestamp3" name="timestamp" readonly="">
											</label>
										</div>
									</div>
									<div class="form-row">
										<div class="form-holder form-holder-2">
											<table class="carrito" id="carrito_regular">
												<thead>
													<tr class="row-head">
														<th class="carrito-header">Hora</th>
														<th class="carrito-header">Item</th>
														<th class="carrito-header">Color</th>
														<th class="carrito-header">Medida</th>
														<th class="carrito-header">Marca</th>
														<th class="carrito-header">Unidad</th>
														<th class="carrito-header">Cantidad</th>
														<th class="carrito-header">Precio (Bs)</th>
														<th class="carrito-header"></th>
													</tr>
												</thead>
												<tbody class="carrito-body">
												</tbody>
											</table>
										</div>
										<div class="form-holder-2">
                                            <button type="button" onclick="addicionarPedidoAlCarrito()">+</button>
										</div>	
											<div class="form-holder-2">
											<button type="button" onclick="removerUltimoPedidoDelCarrito()">-</button>
                                        </div>
									</div>
								</div>
							</section>
							<div class="buttonG" onclick="toprint()">Print</div>
						</div>
						<div class="actions clearfix">
							<ul role="menu" aria-label="Pagination">
								<li><a></a></li>
								<li aria-hidden="false" aria-disabled="false"><a role="menuitem" style="cursor:pointer;" onclick="GuardarPedidos();">Guardar</a></li>
							</ul>
						</div>
					</div>
		        </form>
				<ul style="list-style-type: none;">
                    <li>
                        <span class="row-small-header">Fecha</span>
                        <span class="row-small-header">Hora</span>
                        <span class="row-header">Cliente</span>
                        <span class="row-small-header">Item</span>
                        <span class="row-header">Color</span>
                        <span class="row-small-header">Medida</span>
						<span class="row-small-header">Marca</span>
						<span class="row-small-header">Unidad</span>
                        <span class="row-small-header">Cantidad</span>
						<span class="row-small-header">Venta</span>
                    </li>
                    <% var ventaTotal = 0;
						for(let i = historial.length-1; i >= 0; i--) {
                        	var [fecha, hora] = historial[i].fecha.split(" ");
							ventaTotal = ventaTotal + Number(historial[i].precioVenta);
                        %>
                        <li>
                            <span class="row-small"><%= fecha %></span>
                            <span class="row-small"><%= hora %></span>
                            <span class="row"><%= historial[i].cliente %></span>
                            <span class="row-small"><%= historial[i].item %></span>
                            <span class="row"><%= historial[i].color %></span>
                            <span class="row-small"><%= historial[i].medida %></span>
							<span class="row-small"><%= historial[i].marca %></span>
							<span class="row-small"><%= historial[i].nombreDeUnidad %></span>
                            <span class="row-small"><%= historial[i].cantidad %></span>
							<span class="row-small"><%= historial[i].precioVenta %> Bs</span>
                            <button type="button" id="<%= historial[i]._id.toString() %>" class="delete" onclick="deleteHistorial(this.id)">X</button>
                        </li>
                    <% } %>
					<% if (ventaTotal > 0) { %>
						<li>
							<span class="row-small-invisible"></span>
							<span class="row-small-invisible"></span>
							<span class="row-invisible"></span>
							<span class="row-small-invisible"></span>
							<span class="row-invisible"></span>
							<span class="row-small-invisible"></span>
							<span class="row-small-invisible"></span>
							<span class="row-small-invisible"></span>
							<span class="row-small-invisible"></span>
							<span class="row-small"><%=ventaTotal %> Bs</span>
						</li>
					<% } %>
                </ul>
			</div>
		</div>
